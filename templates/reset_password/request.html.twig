{% extends 'base.html.twig' %}

{% block title %}Renouveler mon mot de passe
{% endblock %}

{% block body %}

	{% include('/partials/_marquee-text.html.twig') %}

	<div class="hero static-page-hero d-flex justify-content-center align-items-center">

		<h1 class="text-center static-page-title">Mot de passe oubli√©</h1>
	</div>

	{% include('/partials/_marquee-icons.html.twig') %}

	<div class="container my-5">
		{% for flash_error in app.flashes('reset_password_error') %}
			<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
		{% endfor %}

		{{ form_start(requestForm) }}
		{{ form_row(requestForm.email) }}
		<div class="d-flex flex-column">
			<div class="text-center">
				<small>
					Entrez votre adresse email et nous vous enverrons un lien afin que vous puissiez renouveler votre mot de passe.
				</small>
			</div>

			<button class="btn btn-lg btn-primary">Envoyer le lien de renouvellement du mot de passe</button>
		</div>
		{{ form_end(requestForm) }}
	</div>

{% endblock %}
