{% extends 'admin/base.html.twig' %}

{% block title %}
	Tableau de bord - Administration
{% endblock %}

{% block body %}
	<div class="container my-auto">
		<div class="text-end my-3">
			<a href="{{ path('admin_theme_create') }}" class="btn btn-success">
				<i class="fa-duotone fa-circle-plus me-2"></i>
				Ajouter une thématique
			</a>
		</div>
		<div class="table-responsive">
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>Nom</th>
						<th>Niveaux</th>
						<th>Matières</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for theme in themes %}
						<tr>
							<td>{{ theme.name }}</td>
							<td>
								{% for level in theme.levels %}
									<span class="text-{{level.color}}">{{ level.short }}</span>
									{% if not loop.last %},
									{% endif %}
								{% endfor %}
							</td>
							<td>
								{% for subject in theme.subjects %}
									<i class="fa-duotone {{subject.icon}} mx-1" title="{{ subject.name }}"></i>
								{% endfor %}
							</td>
							<td>
								<a href="{{ path('admin_theme_update', {id: theme.id}) }}" class="btn btn-primary">
									<i class="fa-duotone fa-edit"></i>
								</a>
								<a href="{{ path('admin_theme_delete', {id: theme.id}) }}" class="btn btn-danger">
									<i class="fa-duotone fa-trash"></i>
								</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
