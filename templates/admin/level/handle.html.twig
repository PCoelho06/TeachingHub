{% extends 'admin/base.html.twig' %}

{% block title %}
	{% if edit %}
		Modifier un niveau
	{% else %}
		Ajouter un niveau
	{% endif %}
	- Administration
{% endblock %}

{% block body %}
	<div class="container">
		{{ form_start(form) }}
		{{ form_row(form.name) }}
		{{ form_row(form.short) }}
		{{ form_row(form.color) }}
		{{ form_row(form.subjects) }}
		<button class="btn btn-primary">
			{% if edit %}
				<i class="fa-duotone fa-edit me-2"></i>
				Modifier le niveau
			{% else %}
				<i class="fa-duotone fa-save me-2"></i>
				Enregistrer le niveau
			{% endif %}
		</button>
		{{ form_end(form) }}
	</div>
{% endblock %}
