{% extends 'admin/base.html.twig' %}

{% block title %}
	Tableau de bord - Administration
{% endblock %}

{% block body %}
	<div class="container my-auto">
		<div class="text-end my-3">
			<a href="{{ path('admin_level_create') }}" class="btn btn-success">
				<i class="fa-duotone fa-circle-plus me-2"></i>
				Ajouter un niveau
			</a>
		</div>
		<div class="table-responsive">
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>Nom</th>
						<th>Code</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for level in levels %}
						<tr>
							<td>{{ level.name }}</td>
							<td>{{ level.short }}</td>
							<td>
								<a href="{{ path('admin_level_update', {id: level.id}) }}" class="btn btn-primary">
									<i class="fa-duotone fa-edit"></i>
								</a>
								<a href="{{ path('admin_level_delete', {id: level.id}) }}" class="btn btn-danger">
									<i class="fa-duotone fa-trash"></i>
								</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
