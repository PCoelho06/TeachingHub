{% extends 'admin/base.html.twig' %}

{% block title %}
	Tableau de bord - Administration
{% endblock %}

{% block body %}
	<div class="container my-auto">
		<div class="text-end my-3">
			<a href="{{ path('admin_subject_create') }}" class="btn btn-success">
				<i class="fa-duotone fa-circle-plus me-2"></i>
				Ajouter une matière
			</a>
		</div>
		<div class="table-responsive">
			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>Nom</th>
						<th>Icône</th>
						<th>Niveaux</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for subject in subjects %}
						<tr>
							<td>{{ subject.name }}</td>
							<td>
								<i class="fa-duotone {{ subject.icon }}"></i>
							</td>
							<td>
								{% for level in subject.levels %}
									<span class="text-{{level.color}}">{{ level.short }}</span>
								{% endfor %}
							</td>
							<td>
								<a href="{{ path('admin_subject_update', {id: subject.id}) }}" class="btn btn-primary">
									<i class="fa-duotone fa-edit"></i>
								</a>
								<a href="{{ path('admin_subject_delete', {id: subject.id}) }}" class="btn btn-danger">
									<i class="fa-duotone fa-trash"></i>
								</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
