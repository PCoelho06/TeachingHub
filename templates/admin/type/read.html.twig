{% extends 'admin/base.html.twig' %}

{% block title %}
	Tableau de bord - Administration
{% endblock %}

{% block body %}
	<div class="container my-auto">
		<div class="text-end my-3">
			<a href="{{ path('admin_type_create') }}" class="btn btn-success">
				<i class="fa-duotone fa-circle-plus me-2"></i>
				Ajouter un type
			</a>
		</div>
		<table class="table table-striped">
			<thead>
				<tr>
					<th scope="col">Id</th>
					<th scope="col">Nom</th>
					<th scope="col" class="text-end">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for type in types %}
					<tr>
						<td>{{ type.id }}</td>
						<td>{{ type.name }}</td>
						<td class="text-end">
							<a href="{{ path('admin_type_update', {id: type.id}) }}" class="btn btn-primary">
								<i class="fa-duotone fa-edit"></i>
							</a>
							<a href="{{ path('admin_type_delete', {id: type.id}) }}" class="btn btn-danger">
								<i class="fa-duotone fa-trash"></i>
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
