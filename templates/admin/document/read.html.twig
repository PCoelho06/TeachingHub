{% extends 'admin/base.html.twig' %}

{% block title %}
	Tableau de bord - Administration
{% endblock %}

{% block body %}
	<div class="container my-auto">
		<div class="text-end my-3">
			<a href="{{ path('admin_document_create') }}" class="btn btn-success">
				<i class="fa-duotone fa-circle-plus me-2"></i>
				Ajouter un document
			</a>
		</div>
		<table class="table table-striped">
			<thead>
				<tr>
					<th scope="col">Id</th>
					<th scope="col">Titre</th>
					<th scope="col">Type</th>
					<th scope="col">Auteur</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for document in documents %}
					<tr>
						<td>{{ document.id }}</td>
						<td>{{ document.title }}</td>
						<td>{{ document.type.name }}</td>
						<td>{{ document.author.username }}</td>
						<td>
							<a href="{{ path('admin_document_update', {id: document.id}) }}" class="btn btn-primary">
								<i class="fa-duotone fa-edit"></i>
							</a>
							<a href="{{ path('admin_document_delete', {id: document.id}) }}" class="btn btn-danger">
								<i class="fa-duotone fa-trash"></i>
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
