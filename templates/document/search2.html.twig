{% extends 'base.html.twig' %}
{% block title %}Chercher un document
{% endblock
%}
{% block body %}
	<div class="container my-5">
		<h1 class="page-title">Rechercher un document</h1>

		{{ form_start(form) }}
		{# {{ form_row(form.types, {'attr': {'class': 'd-flex gap-5'}}) }} #}
		<div class="row">
			<div class="col">
				{{ form_row(form.type) }}
			</div>
			<div class="col">
				{{ form_row(form.level)}}
			</div>
			<div class="col">
				{{ form_row(form.subject)}}
			</div>
			<div class="col">
				{{ form_row(form.theme)}}
			</div>
		</div>
		<div class="mb-3">
			{{ form_widget(form.title)}}
		</div>
		<div class="d-flex flex-column align-items-center">
			<button type="submit" class="btn btn-lg btn-primary">Rechercher un document</button>
		</div>


		<div class="bar w-75 mx-auto my-3"></div>

		<div id="filters" class="w-100 d-flex justify-content-between align-items-center gap-3">
			<div>Note minimale :
				{% for i in 1..5 %}
					<i class="far fa-star rating-filter" id="minimal-rating-{{i}}"></i>
				{% endfor %}
			</div>
			{{ form_widget(form.orderBy)}}
		</div>
		{{ form_end(form) }}

		<div id="results" class="container overflow-hidden my-3">

			<div class="row row-cols-2 g-3" id="document_results">

				{% for document in documents %}
					<a href="{{ path('document_show', {'slug': document.slug}) }}">
						<div class="col document" data-rating="{{document.ratingAverage}}">
							<div class="p-3 border bg-light">
								<h2 class="text-center">{{ document.title }}</h2>
								<div class="mx-auto text-center">
									proposé le
									{{ document.uploadedAt | format_datetime('short', 'none', locale='fr') }}
									par
									{{ document.author.username }}
								</div>
								<div class="mx-auto text-center">
									{% include 'partials/_rating.html.twig' %}
									{{ document.ratingAverage }}
								</div>

							</div>
						</div>
					</a>
				{% endfor %}


				{# {% if previous >= 0 %}
																						<a href="{{ path('document_search', { offset: previous }) }}">Previous</a>
																					{% endif %}
																					{% if next < documents|length %}
																						<a href="{{ path('document_search', { offset: next }) }}">Next</a>
																					{% endif %} #}

			</div>
		</div>
		<nav>
			<ul class="pagination justify-content-center">
				<li class="page-item {% if previous < 0 %} disabled {% endif %}">
					<a href="{{ path('document_search', { offset: previous }) }}" class="page-link">Précédent</a>
				</li>
				<li class="page-item {% if next >= documents|length %} disabled {% endif %}">
					<a href="{{ path('document_search', { offset: next }) }}" class="page-link">Suivant</a>
				</li>
			</ul>
		</nav>


	</div>
{% endblock %}
