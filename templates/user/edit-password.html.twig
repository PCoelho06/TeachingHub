{% extends 'base.html.twig' %}

{% block title %}Mon tableau de bord
{% endblock %}

{% block body %}

	<div class="container my-5">
		<div class="row">
			<div class="col-3 border border-2">
				{% include('partials/_user-nav.html.twig') %}

				<div class="row"></div>
			</div>
			<div class="col-9 d-flex flex-column justify-content-center">
				{% for label, messages in app.flashes %}
					{% for message in messages %}
						<div class="alert alert-{{ label }}" role="alert">{{ message }}</div>
					{% endfor %}
				{% endfor %}

				<div class="container">
					{{ form_start(form) }}
					{{ form_row(form.current_password) }}
					{{ form_row(form.new_password) }}


					<div class="d-flex flex-column my-5">
						<button type="submit" class="btn btn-lg btn-primary">Changer le mot de passe</button>
					</div>
					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>
</div>{% endblock %}
