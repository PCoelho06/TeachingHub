<div {{ attributes }}>
	{{ form_start(form) }}
	<div class="row">
		<div class="col-md-6">
			{{ form_row(form.type) }}
		</div>
		<div class="col-md-6">
			{{ form_row(form.levels, {
                'attr': {
                    'class': 'd-flex flex-wrap',
                },
                'label_attr': {
                    'class': 'me-2',
                }
            }) }}
		</div>
	</div>
	<div class="row">
		<div class="col-md-6">
			{{ form_row(form.subjects, {
                'attr': {
                    'class': 'd-flex flex-wrap',
                },
                'label_attr': {
                    'class': 'me-2',
                }
            }) }}
		</div>
		<div class="col-md-6">
			{% if form.themes is defined %}
				{{ form_row(form.themes) }}
			{% endif %}
		</div>
	</div>
	{{ form_row(form.title) }}
	{{ form_row(form.description) }}
	{{ form_row(form.file) }}
	<button type="submit" class="btn btn-lg btn-primary">DÃ©poser le document</button>
	{{ form_end(form) }}
	<strong>{{ this.randomNumber }}</strong>
	<p data-action="live#$render" class="btn btn-primary">Generate a new number!</p>
</div>
